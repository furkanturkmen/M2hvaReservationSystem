<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorOrangeDark</item>
        <item name="colorPrimary">@color/colorOrange</item>
        <item name="android:popupTheme">@style/PopupTheme</item>

        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <!-- Splashscreen application. -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="QuickReserveButton">
        <item name="android:background">@color/colorOrange</item>
    </style>

    //M2Orange Button
    <style name="M2OrangeButton" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorBlueDark</item>
        <item name="colorButtonNormal">@color/colorOrange</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="NavBar" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorBlueDark</item>
        <item name="colorButtonNormal">@color/colorOrange</item>
        <item name="android:background">@color/colorBlue</item>
    </style>

    //Title for Cards
    <style name="CardTitle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/colorBlueDark</item>
    </style>

    //Content for Cards
    <style name="CardContent" parent="Base.Theme.AppCompat.Light">
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>


    // Background toolbar menu
    <style name="PopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    Bottom navigation menu
    <style name="BottomNavigation" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorBlueDark</item>
        <item name="colorButtonNormal">@color/colorOrange</item>
        <item name="android:background">@color/colorBlueDark</item>
        <item name="android:colorPressedHighlight">@color/colorBlue</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


</resources>
