<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/reserve_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccentOrange"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Make a Reservation"
        app:titleMarginStart="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="@string/reserve_room_capacity"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reserve_room_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_border_spinner"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="@string/reserve_room_name"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reserve_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_border_spinner"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:gravity="start"
            android:text="Date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserve_room_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_date"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textStyle="bold"
            tools:text="06/11/18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="@string/reserve_room_time"
                android:textStyle="bold"
                tools:text="Time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="@string/reserve_room_duration"
                android:textStyle="bold"
                tools:text="Duration" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reserve_room_timepicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/reserve_room_time"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textStyle="bold"
                tools:text="12:00" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/reserve_room_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/reserve_room_border_spinner"
                android:paddingStart="26dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:textStyle="bold"
                tools:text="1h" />

        </LinearLayout>

        <Button
            android:id="@+id/reserve_room_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12dp"
            android:background="@color/colorAccentBlue"
            android:text="@string/make_a_reservation"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>