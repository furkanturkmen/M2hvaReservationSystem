<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/reserve_room_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/colorOrange"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/PopupTheme"
        app:title="Make a Reservation" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/reserve_room_capacity"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reserve_room_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_border_spinner"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/reserve_room_name"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/reserve_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_border_spinner"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/reserve_room_date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserve_room_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/reserve_room_date"
            style="?android:attr/spinnerStyle"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            tools:text="06/11/18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/reserve_room_starttime"
                    android:textStyle="bold"
                    tools:text="Time" />

                <TextView
                    android:id="@+id/reserve_room_starttimepicker"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/reserve_room_time"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    tools:text="12:00" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="12dp"
                    android:text="@string/reserve_room_endtime"
                    android:textStyle="bold"
                    tools:text="Duration" />

                <TextView
                    android:id="@+id/reserve_room_endtimepicker"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/reserve_room_time"
                    android:paddingStart="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    tools:text="12:00" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/invalid_time"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/invalid_time"
            style="@style/TextAppearance.Design.Error"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="@string/reserve_room_slots"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/meeting_times"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/reserve_room_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/make_a_reservation"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>